#app > .theme-container > header.navbar .site-name
  &:before
    content: ''
    display: inline-block
    width: 40px
    height: 40px
    vertical-align: middle
    background: url('/assets/img/logo-ooh-ooh.png')
    background-size: contain
    margin-right: 10px
    top: -4px
    position: relative

div
  position: relative

img
  vertical-align: middle

.callout
  padding: 20px
  background: #efefef
  border-radius: 2px
  font-weight: bold
  color: #aaa

.nav-link.action-button, .action-button
  border: none
  display: inline-block
  font-size: 1.2rem
  color: #fff
  background-color: #3eaf7c
  padding: .8rem 1.6rem
  border-radius: 4px
  transition: background-color .1s ease
  box-sizing: border-box
  border-bottom: 1px solid #389d70
  cursor: pointer
  text-decoration: none !important

.action-button:hover
  background-color: #4abf8a

// Helpers
.text-center
  text-align: center

.mr-1
  margin-right: 10px

.roomy
  > p, blockquote
    margin-bottom: 60px

#handsfree-debug
  position: relative

#handsfree-debug-stopper, .handsfree-is-stopped #handsfree-debug-stopper
  display: none

.handsfree-is-started #handsfree-debug-stopper
  display: block
