#app > .theme-container > header.navbar .site-name
  &:before
    content: ''
    display: inline-block
    width: 40px
    height: 40px
    vertical-align: middle
    background: url('/assets/img/logo-pre-aah-aah.png')
    background-size: contain
    margin-right: 10px
    top: -4px
    position: relative

div
  position: relative

img
  vertical-align: middle

.callout
  padding: 20px
  background: #efefef
  border-radius: 2px
  font-weight: bold
  color: #aaa

.nav-link.action-button, .action-button
  border: none
  display: inline-block
  font-size: 1.2rem
  color: #fff
  background-color: #6e4380
  padding: .8rem 1.6rem
  border-radius: 4px
  transition: background-color .1s ease
  box-sizing: border-box
  border-bottom: 1px solid #4c2c5a
  cursor: pointer
  text-decoration: none !important

.action-button:hover
  background-color: #7b5e87

// Helpers
.text-center
  text-align: center

.mr-1
  margin-right: 10px

.roomy
  > p, blockquote
    margin-bottom: 60px

#handsfree-debug
  position: relative

#handsfree-debug-stopper, .handsfree-is-stopped #handsfree-debug-stopper
  display: none

.handsfree-is-started #handsfree-debug-stopper
  display: block

// Dat.GUI
.dg
  z-index: 21 !important
  position: static

  &.ac
    top: 57px !important

  div
    position: static
